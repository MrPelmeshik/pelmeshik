{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "ConnectionString": "Host=postgres;Port=5432;Database=tasker_db;Username=postgres;Password=${PWD_PG_TASKER_DB_POSTGRES}"
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/tasker",
    "Audience": "tasker-api",
    "ClientId": "tasker-api",
    "ClientSecret": "your-client-secret",
    "RequireHttpsMetadata": false,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  }
}
