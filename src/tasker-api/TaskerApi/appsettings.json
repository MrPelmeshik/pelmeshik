{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "ConnectionString": "Host=postgres;Port=5432;Database=tasker_db;Username=postgres;Password=${PWD_PG_DB_POSTGRES}"
  },
  "Jwt": {
    "Issuer": "TaskerApi",
    "Audience": "TaskerApiAudience",
    "SecretKey": "CHANGE_ME_TO_A_LONG_RANDOM_SECRET_32+_CHARS",
    "AccessTokenLifetimeMinutes": 60,
    "RefreshTokenLifetimeDays": 7
  }
}
